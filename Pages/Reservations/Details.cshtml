@page
@model Animal_Cafe_Core_Web_App.Pages.Reservations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Reservation Details</h5>
            </div>
            <div class="card-body">
                <h4>Reservation Information</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Reservation.NoOfClients)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Reservation.NoOfClients)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Reservation.Client)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Reservation.Client.Name)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Reservation.ReservationDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Reservation.ReservationDate)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Reservation.FavouriteAnimal)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Reservation.FavouriteAnimal)
                    </dd>

                    @if (Model.Reservation.AnimalID != null)
                    {
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Reservation.YourBuddy)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Reservation.YourBuddy.Name)
                        </dd>
                    }
                </dl>
            </div>
            <div class="card-footer">
                <a class="btn btn-edit" asp-page="./Edit" asp-route-id="@Model.Reservation.ID">Edit</a> 
                <a class="btn btn-back" asp-page="./Index">Back</a>
            </div>
        </div>
    </div>
</div>
@page
@model Animal_Cafe_Core_Web_App.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Are you sure you want to delete this product?</h5>
            </div>
            <div class="card-body">
                <h4>Product Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-7">
                        @Html.DisplayNameFor(model => model.Product.Name)
                    </dt>
                    <dd class="col-sm-13">
                        @Html.DisplayFor(model => model.Product.Name)
                    </dd>
                    <dt class="col-sm-7">
                        @Html.DisplayNameFor(model => model.Product.Price)
                    </dt>
                    <dd class="col-sm-13">
                        @Html.DisplayFor(model => model.Product.Price)
                    </dd>
                    <dt class="col-sm-7">
                        @Html.DisplayNameFor(model => model.Product.Category)
                    </dt>
                    <dd class="col-sm-13">
                        @Html.DisplayFor(model => model.Product.Category)
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <form method="post">
                    <input type="hidden" asp-for="Product.ID" />
                    <button type="submit" class="btn btn-delete">Delete</button>
                    <a class="btn btn-back" asp-page="./Index">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>


@page
@model Animal_Cafe_Core_Web_App.Pages.Animals.IndexModel

<h1 class="text-white">Animals</h1>

<p>
    <a class="btn btn-add" asp-page="Create">Create New</a>
</p>

<div class="row">
    @foreach (var animal in Model.Animal)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title">@animal.Name</h5>
                </div>
                <div class="card-body">
                    <p><strong>Breed:</strong> @animal.Breed</p>
                    <p><strong>Age:</strong> @animal.Age</p>
                    @if (animal.AnimalPhoto != null && animal.AnimalPhoto.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(animal.AnimalPhoto)" alt="@animal.Name" class="img-fluid" style="height:200px; object-fit:cover;" />
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </div>
                <div class="card-footer">
                    <a class="btn btn-edit" asp-page="./Edit" asp-route-id="@animal.ID">Edit</a>
                    <a class="btn btn-details" asp-page="./Details" asp-route-id="@animal.ID">Details</a>
                </div>
            </div>
        </div>
    }
</div>

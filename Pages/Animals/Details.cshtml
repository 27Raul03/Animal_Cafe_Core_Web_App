@page
@model Animal_Cafe_Core_Web_App.Pages.Animals.DetailsModel


<div class="col-md-4">
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title">@Model.Animal.Name</h5>
        </div>
        <div class="card-body">

            <div>
                <strong>Breed:</strong> @Model.Animal.Breed
            </div>
            <div>
                <strong>Age:</strong> @Model.Animal.Age
            </div>
            <div>
                <strong>Description:</strong> @Model.Animal.Description
            </div>
            <div>
                <strong>Health:</strong> @Model.Animal.Health
            </div>
            <br/>
            @if (Model.Animal.AnimalPhoto != null && Model.Animal.AnimalPhoto.Length > 0)
            {
                <div>
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Animal.AnimalPhoto)" alt="@Model.Animal.Name" style="width:200px; height:auto;" />
                </div>
            }
            <br />
            <a asp-page="./Index" class="btn btn-back">Back</a>
            </div>
        </div>
 </div>



@page
@model Animal_Cafe_Core_Web_App.Pages.Reviews.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-white">Delete Review</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Are you sure you want to delete this review?</h5>
            </div>
            <div class="card-body">
                <h4>Review Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Review.Rating)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Review.Rating)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Review.Comments)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Review.Comments)
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <form method="post">
                    <input type="hidden" asp-for="Review.ID" />
                    <button type="submit" class="btn btn-delete">Delete</button>
                    <a class="btn btn-back" asp-page="./Index">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
